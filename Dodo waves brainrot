local p = game.Players.LocalPlayer
local char = p.Character or p.CharacterAdded:Wait()
local root = char:WaitForChild("HumanoidRootPart")
local vu = game:GetService("VirtualUser")

-- 1. ZAMERENÍ POZICE (Uloží tvůj hiding spot hned po spuštění)
local safeSpot = root.CFrame 

game:GetService("StarterGui"):SetCore("ChatMakeSystemMessage", {
    Text = "[LUKAS-BOT]: AFK Farma zapnuta! Hledám Smurfy, OG a Secret věci.";
    Color = Color3.fromRGB(0, 255, 255);
})

-- 2. ANTI-AFK (Ať tě to nevyhodí)
p.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)

-- 3. AUTOMATICKÝ SBĚRAČ A TELEPORT
spawn(function()
    while true do
        task.wait(0.2) -- Skenuje mapu bleskově
        local foundAnything = false
        
        for _, item in pairs(game.Workspace:GetDescendants()) do
            -- Kontrola všech názvů, které chceš sbírat
            if item.Name:find("Smurf") or item.Name:find("Lucky") or item.Name:find("OG") or item.Name:find("Secret") then
                -- Najde část, ke které se dá portnout
                local target = nil
                if item:IsA("BasePart") then
                    target = item
                elseif item:FindFirstChildWhichIsA("BasePart") then
                    target = item:FindFirstChildWhichIsA("BasePart")
                end
                
                if target then
                    foundAnything = true
                    -- Rychlý skok pro item a hned zpět do bezpečí
                    root.CFrame = target.CFrame
                    task.wait(0.1) 
                    root.CFrame = safeSpot
                end
            end
        end
        
        -- Pokud nic nenašel, pro jistotu tě drží na místě
        if not foundAnything then
            root.CFrame = safeSpot
        end
    end
end)
