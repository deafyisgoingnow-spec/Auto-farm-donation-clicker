local p = game.Players.LocalPlayer
local pgui = p:WaitForChild("PlayerGui")
local runService = game:GetService("RunService")

-- 1. ZPRÁVA DO CHATU (ať víš, že to běží)
game:GetService("StarterGui"):SetCore("ChatMakeSystemMessage", {
    Text = "LUKAS-BOT AKTIVOVAN! Cíl: 500k kliků.";
    Color = Color3.fromRGB(0, 255, 0);
})

-- 2. ANTI-AFK (Zabrání vykopnutí ze serveru)
local vu = game:GetService("VirtualUser")
p.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)

-- 3. EXTRÉMNÍ AUTO-CLICKER (Kliká každých 0.01 sekundy)
spawn(function()
    while true do
        -- Simuluje kliknutí na hlavní tlačítko uprostřed obrazovky
        vu:Button1Down(Vector2.new(500, 500))
        wait(0.01)
        vu:Button1Up(Vector2.new(500, 500))
    end
end)

-- 4. MAZÁNÍ TABULEK (Ničitel tabulky "123")
runService.RenderStepped:Connect(function()
    for _, v in pairs(pgui:GetChildren()) do
        -- Smaže všechna nová okna kromě chatu a ovládání mobilu
        if v:IsA("ScreenGui") and v.Name ~= "Chat" and v.Name ~= "BubbleChat" and v.Name ~= "TouchGui" then
            v:Destroy()
        end
    end
end)

print("Script pro Lukáše je připraven na 500k grind!")
