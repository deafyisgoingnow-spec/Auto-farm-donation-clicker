local Lyrical = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local BToolsBtn = Instance.new("TextButton")
local Corner = Instance.new("UICorner")

-- Nastaven√≠ GUI
Lyrical.Name = "DarkByteGui"
Lyrical.Parent = game.CoreGui

MainFrame.Name = "MainFrame"
MainFrame.Parent = Lyrical
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.Position = UDim2.new(0.5, -75, 0.4, 0)
MainFrame.Size = UDim2.new(0, 150, 0, 100)
MainFrame.Active = true
MainFrame.Draggable = true -- Aby se dalo po obrazovce posouvat

Instance.new("UICorner", MainFrame).CornerRadius = BoxBlurSize.new(0, 8)

Title.Parent = MainFrame
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "DARK BYTE GUI"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold

BToolsBtn.Parent = MainFrame
BToolsBtn.Position = UDim2.new(0.1, 0, 0.4, 0)
BToolsBtn.Size = UDim2.new(0.8, 0, 0.4, 0)
BToolsBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
BToolsBtn.Text = "Get BTools"
BToolsBtn.TextColor3 = Color3.fromRGB(0, 200, 255)
BToolsBtn.Font = Enum.Font.Gotham
Instance.new("UICorner", BToolsBtn)

-- Funkce pro BTools
BToolsBtn.MouseButton1Click:Connect(function()
    local p = game:GetService("Players").LocalPlayer
    local backpack = p:WaitForChild("Backpack")
    
    local toolNames = {"Move", "Clone", "Delete"}
    for i, name in pairs(toolNames) do
        local tool = Instance.new("HopperBin")
        tool.BinType = name
        tool.Parent = backpack
    end
    
    BToolsBtn.Text = "Done!"
    task.wait(1)
    BToolsBtn.Text = "Get BTools"
end)
