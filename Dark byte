local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "üíé Luxury Menu | Delta Executor",
   LoadingTitle = "Naƒç√≠t√°n√≠ syst√©mu...",
   LoadingSubtitle = "by Gemini AI",
   ConfigurationSaving = { Enabled = false }
})

-- PROMƒöNN√â
local lp = game.Players.LocalPlayer
local char = lp.Character or lp.CharacterAdded:Wait()
local ws_val = 16
local jp_val = 50
local fly_speed = 50
local flying = false
local noclip = false

-- KATEGORIE: VISUAL
local VisualTab = Window:CreateTab("Visual", 4483362458)

local ESP_Folder = Instance.new("Folder", game.CoreGui)
VisualTab:CreateToggle({
   Name = "ESP All (Highlights)",
   CurrentValue = false,
   Callback = function(Value)
      if Value then
         for _, v in pairs(game.Players:GetPlayers()) do
            if v ~= lp and v.Character then
               local highlight = Instance.new("Highlight", ESP_Folder)
               highlight.Adornee = v.Character
               highlight.FillColor = Color3.fromRGB(255, 0, 0)
            end
         end
      else
         ESP_Folder:ClearAllChildren()
      end
   end,
})

-- KATEGORIE: PLAYER
local PlayerTab = Window:CreateTab("Player", 4483362458)

PlayerTab:CreateSlider({
   Name = "WalkSpeed Value",
   Range = {16, 300},
   Increment = 1,
   CurrentValue = 16,
   Callback = function(Value) ws_val = Value end,
})

PlayerTab:CreateToggle({
   Name = "Enable Speed",
   CurrentValue = false,
   Callback = function(Value)
      lp.Character.Humanoid.WalkSpeed = Value and ws_val or 16
   end,
})

PlayerTab:CreateSlider({
   Name = "JumpPower Value",
   Range = {50, 500},
   Increment = 1,
   CurrentValue = 50,
   Callback = function(Value) jp_val = Value end,
})

PlayerTab:CreateToggle({
   Name = "Enable Jump",
   CurrentValue = false,
   Callback = function(Value)
      lp.Character.Humanoid.UseJumpPower = true
      lp.Character.Humanoid.JumpPower = Value and jp_val or 50
   end,
})

PlayerTab:CreateToggle({
   Name = "Noclip",
   CurrentValue = false,
   Callback = function(Value)
      noclip = Value
      game:GetService("RunService").Stepped:Connect(function()
         if noclip then
            for _, part in pairs(lp.Character:GetDescendants()) do
               if part:IsA("BasePart") then part.CanCollide = false end
            end
         end
      end)
   end,
})

PlayerTab:CreateButton({
   Name = "Invisible (Local)",
   Callback = function()
      for _, part in pairs(lp.Character:GetDescendants()) do
         if part:IsA("BasePart") or part:IsA("Decal") then part.Transparency = 1 end
      end
   end,
})

-- KATEGORIE: FUN & SOUNDS
local FunTab = Window:CreateTab("Fun & Audio", 4483362458)

-- POZN√ÅMKA K AUDIU: V Robloxu nyn√≠ sly≈°√≠ hudbu ostatn√≠ jen pokud m√°≈° "Radio" gamepass v dan√© h≈ôe.
local currentSound = Instance.new("Sound", game.Workspace)
local function playSfx(id)
   currentSound:Stop()
   currentSound.SoundId = "rbxassetid://"..id
   currentSound.Volume = 2
   currentSound:Play()
end

FunTab:CreateButton({ Name = "Stop Music", Callback = function() currentSound:Stop() end })
FunTab:CreateSection("Doors Sounds")
FunTab:CreateButton({ Name = "Rush", Callback = function() playSfx("9114223126") end })
FunTab:CreateButton({ Name = "Ambush", Callback = function() playSfx("9119853315") end })
FunTab:CreateButton({ Name = "Elevator Music", Callback = function() playSfx("9118025211") end })

FunTab:CreateSection("Combat")
FunTab:CreateButton({
   Name = "Fling All",
   Callback = function()
      local bam = Instance.new("BodyAngularVelocity", lp.Character.HumanoidRootPart)
      bam.AngularVelocity = Vector3.new(0, 99999, 0)
      bam.MaxTorque = Vector3.new(0, 99999, 0)
      for _, v in pairs(game.Players:GetPlayers()) do
         if v ~= lp and v.Character then
            lp.Character.HumanoidRootPart.CFrame = v.Character.HumanoidRootPart.CFrame
            task.wait(0.1)
         end
      end
      bam:Destroy()
   end,
})
