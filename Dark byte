local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "üíé Luxury Menu | FIXED",
   LoadingTitle = "Oprava chyb...",
   LoadingSubtitle = "by Gemini AI",
   ConfigurationSaving = { Enabled = false }
})

-- PROMƒöNN√â
local lp = game.Players.LocalPlayer
local ws_val, jp_val, fly_val = 16, 50, 50
local noclip, flying = false, false
local ESP_Folder = Instance.new("Folder", game.CoreGui)

-- KATEGORIE: VISUAL
local VisualTab = Window:CreateTab("Visuals", 4483362458)
VisualTab:CreateToggle({
   Name = "ESP All (Vidƒõn√≠ p≈ôes zdi)",
   CurrentValue = false,
   Callback = function(v)
      if v then
         for _, p in pairs(game.Players:GetPlayers()) do
            if p ~= lp and p.Character then
               local h = Instance.new("Highlight", ESP_Folder)
               h.Adornee = p.Character
               h.FillColor = Color3.fromRGB(255, 0, 0)
            end
         end
      else 
         ESP_Folder:ClearAllChildren() 
      end
   end,
})

-- KATEGORIE: PLAYER
local PlayerTab = Window:CreateTab("Player", 4483362458)

-- OPRAVEN√ù GOD MODE (Zmƒõna stavu Humanoida)
PlayerTab:CreateToggle({
   Name = "God Mode (Nesmrtelnost)",
   CurrentValue = false,
   Callback = function(v)
      if v then
         lp.Character.Humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, false)
         lp.Character.Humanoid.MaxHealth = 1000000
         lp.Character.Humanoid.Health = 1000000
      else
         lp.Character.Humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, true)
         lp.Character.Humanoid.MaxHealth = 100
         lp.Character.Humanoid.Health = 100
      end
   end,
})

PlayerTab:CreateSlider({
   Name = "Rychlost", Range = {16, 300}, Increment = 1, CurrentValue = 16,
   Callback = function(v) ws_val = v end,
})
PlayerTab:CreateToggle({
   Name = "Zapnout Rychlost", CurrentValue = false,
   Callback = function(v) lp.Character.Humanoid.WalkSpeed = v and ws_val or 16 end,
})

-- OPRAVEN√ù FLY PRO MOBILE (Pou≈æ√≠v√° BodyVelocity)
PlayerTab:CreateSlider({
   Name = "Fly Speed", Range = {10, 300}, Increment = 1, CurrentValue = 50,
   Callback = function(v) fly_val = v end,
})
PlayerTab:CreateToggle({
   Name = "Fly (L√©t√°n√≠)", CurrentValue = false,
   Callback = function(v)
      flying = v
      local char = lp.Character
      if flying then
         local bv = Instance.new("BodyVelocity", char.HumanoidRootPart)
         bv.Name = "FlyVelocity"
         bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
         bv.Velocity = Vector3.new(0, 0, 0)
         
         task.spawn(function()
            while flying do
               bv.Velocity = char.Humanoid.MoveDirection * fly_val + Vector3.new(0, 0.1, 0)
               task.wait()
            end
            if char.HumanoidRootPart:FindFirstChild("FlyVelocity") then
               char.HumanoidRootPart.FlyVelocity:Destroy()
            end
         end)
      end
   end,
})

PlayerTab:CreateToggle({
   Name = "Noclip (Zdi)", CurrentValue = false,
   Callback = function(v)
      noclip = v
      game:GetService("RunService").Stepped:Connect(function()
         if noclip and lp.Character then
            for _, p in pairs(lp.Character:GetDescendants()) do
               if p:IsA("BasePart") then p.CanCollide = false end
            end
         end
      end)
   end,
})

-- KATEGORIE: FUN
local FunTab = Window:CreateTab("Fun & Audio", 4483362458)
local sfx = Instance.new("Sound", game.Workspace)
local function playS(id) sfx:Stop() sfx.SoundId = "rbxassetid://"..id sfx.Volume = 2 sfx:Play() end

FunTab:CreateButton({ Name = "STOP HUDBA", Callback = function() sfx:Stop() end })
FunTab:CreateButton({ Name = "Song 1", Callback = function() playS("1051939103") end })
FunTab:CreateButton({ Name = "Song 2", Callback = function() playS("881678229") end })
FunTab:CreateButton({ Name = "Song 3", Callback = function() playS("915497217") end })
FunTab:CreateButton({ Name = "Song 4", Callback = function() playS("710499298") end })
FunTab:CreateButton({ Name = "Song 5", Callback = function() playS("9119619134") end })
FunTab:CreateButton({ Name = "Song 6", Callback = function() playS("9118182767") end })
FunTab:CreateButton({ Name = "Song 7", Callback = function() playS("9120760361") end })

FunTab:CreateButton({
   Name = "Fling All",
   Callback = function()
      local r = Instance.new("BodyAngularVelocity", lp.Character.HumanoidRootPart)
      r.AngularVelocity = Vector3.new(0, 99999, 0)
      r.MaxTorque = Vector3.new(0, 99999, 0)
      for _, t in pairs(game.Players:GetPlayers()) do
         if t ~= lp and t.Character then
            lp.Character.HumanoidRootPart.CFrame = t.Character.HumanoidRootPart.CFrame
            task.wait(0.2)
         end
      end
      r:Destroy()
   end,
})
